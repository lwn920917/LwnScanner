{
  "manifest_version": 3,
  "name": "TsScanner",
  "version": "1.0",
  "description": "A text scanner for your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "system.display"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js",
        "html2canvas.min.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "lwn-screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "lwn screen"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["app.js"],
      "matches": ["<all_urls>"]
    }
  ]
}